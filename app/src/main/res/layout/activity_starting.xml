<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_gradient_bg_for_activites"
    tools:context=".Activities.StartingActivity">

    <ImageView
        android:id="@+id/animated_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/base_logo"
        />



    <TextView
        android:id="@+id/brand_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGGER"
        android:layout_below="@id/animated_img"
        android:layout_centerInParent="true"
        android:fontFamily="@font/commando"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/light_orange"
        android:textStyle="bold"
       />

</RelativeLayout>